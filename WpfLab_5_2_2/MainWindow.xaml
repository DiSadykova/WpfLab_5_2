<Window x:Class="WpfLab_5_2_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLab_5_2_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Margin="5" Padding="5">
            <MenuItem Header="_Файл">
                <MenuItem Header="_Открыть">
                    <MenuItem.Icon>
                        <Image Source="/Data/iconOpen.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Сохранить">
                    <MenuItem.Icon>
                        <Image Source="/Data/iconSave.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Выход">
                    <MenuItem.Icon>
                        <Image Source="/Data/iconExit.png"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

        </Menu>
        <InkCanvas x:Name="inkCanvas" Grid.Row="1">
        </InkCanvas>
    </Grid>
</Window>
